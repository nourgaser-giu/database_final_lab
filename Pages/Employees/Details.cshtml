@page "{id:int}"
@model HrLabApp.Pages.Employees.DetailsModel

<h1>Employee Details</h1>

<div>
    <h4>Employee</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Employee.Name)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Employee.Name)</dd>
        
        <dt class="col-sm-2">Department</dt>
        <dd class="col-sm-10">@(Model.Employee.Department?.Name ?? "No Department")</dd>
        
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Employee.Salary)</dt>
        <dd class="col-sm-10">@Model.Employee.Salary.ToString("C")</dd>
    </dl>
</div>

<a asp-page="Edit" asp-route-id="@Model.Employee.Id">Edit</a> |
